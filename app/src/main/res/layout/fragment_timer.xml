<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timerFrame01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="?attr/backgroundColor"
    tools:context=".TimerFragment">


    <!-- TODO: Update blank fragment layout -->


    <android.support.constraint.ConstraintLayout
        android:id="@+id/upperConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/toolbar"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/backButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleX=".95"
                            android:scaleY=".95"
                            android:src="@drawable/ic_back"
                            android:tint="?attr/tintColor"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/moreButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleX=".95"
                            android:scaleY=".95"
                            android:src="@drawable/ic_more"
                            android:tint="?attr/tintColor"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/headerText"
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="Edit Workout"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="?attr/headerTextColor"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="16dp"
                    android:text="Low Intensity"
                    android:textAllCaps="true"
                    android:textColor="?attr/textColor"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/cardRest"
                    app:layout_constraintStart_toStartOf="parent" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView34"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Name"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/workoutNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_default"
                                android:ems="10"
                                android:fontFamily="@font/roboto"
                                android:hint="Add name"
                                android:inputType="text"
                                android:maxLength="24"
                                android:nextFocusDown="@id/workTimer"
                                android:selectAllOnFocus="true"
                                android:textAlignment="viewEnd"
                                android:textColor="?attr/secondaryTextColor"
                                android:textColorHint="?attr/hintTextColor"
                                android:textSize="16sp"
                                tools:layout_editor_absoluteX="235dp" />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/cardWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardName">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView35"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Work Interval"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/workTimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_default"
                                android:ems="10"
                                android:hint="0m 00s"
                                android:inputType="number"
                                android:maxLength="7"
                                android:nextFocusDown="@id/restTimer"
                                android:selectAllOnFocus="true"
                                android:text="0m 00s"
                                android:textAlignment="viewEnd"
                                android:textColor="?attr/secondaryTextColor"
                                android:textColorHint="?attr/hintTextColor"
                                android:textSize="16sp"
                                tools:layout_editor_absoluteX="242dp"
                                tools:layout_editor_absoluteY="16dp" />
                        </LinearLayout>

                        <View
                            style="@style/Divider"
                            id="@+id/view4"
                            android:layout_width="match_parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView36"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Circuit Mode"
                                android:textSize="16sp" />

                            <Switch
                                android:id="@+id/circuitSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/circuitLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <View
                                android:id="@+id/view6"
                                style="@style/Divider"
                                id="@+id/view4"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></View>

                            <LinearLayout
                                android:id="@+id/circuitLayout01"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/textView37"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Number of Cycles"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/cyclesTimer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_text_default"
                                    android:ems="10"
                                    android:hint="1"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:nextFocusDown="@id/restTimer"
                                    android:selectAllOnFocus="true"
                                    android:text="1"
                                    android:textAlignment="viewEnd"
                                    android:textColor="?attr/secondaryTextColor"
                                    android:textColorHint="?attr/hintTextColor"
                                    android:textSize="16sp"
                                    tools:layout_editor_absoluteX="242dp"
                                    tools:layout_editor_absoluteY="16dp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardRest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardWork">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView35"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Rest Interval"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/restTimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_default"
                                android:ems="10"
                                android:hint="0m 00s"
                                android:inputType="number"
                                android:maxLength="7"
                                android:nextFocusDown="@id/setsTimer"
                                android:selectAllOnFocus="true"
                                android:text="0m 00s"
                                android:textAlignment="viewEnd"
                                android:textColor="?attr/secondaryTextColor"
                                android:textColorHint="?attr/hintTextColor"
                                android:textSize="16sp"
                                tools:layout_editor_absoluteX="242dp"
                                tools:layout_editor_absoluteY="16dp" />
                        </LinearLayout>

                        <View
                            style="@style/Divider"
                            id="@+id/view4"
                            android:layout_width="match_parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView36"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Include Prep Time"
                                android:textSize="16sp" />

                            <Switch
                                android:id="@+id/prepSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/prepLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <View
                                android:id="@+id/view6"
                                style="@style/Divider"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></View>

                            <LinearLayout
                                android:id="@+id/prepLayout01"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/textView37"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Prep Interval"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/prepTimer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_text_default"
                                    android:ems="10"
                                    android:hint="0m 00s"
                                    android:inputType="number"
                                    android:maxLength="7"
                                    android:nextFocusDown="@id/setsTimer"
                                    android:selectAllOnFocus="true"
                                    android:text="0m 00s"
                                    android:textAlignment="viewEnd"
                                    android:textColor="?attr/secondaryTextColor"
                                    android:textColorHint="?attr/hintTextColor"
                                    android:textSize="16sp"
                                    tools:layout_editor_absoluteX="242dp"
                                    tools:layout_editor_absoluteY="16dp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardSets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardRest">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView35"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Number of Sets"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/setsTimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_default"
                                android:ems="10"
                                android:hint="1"
                                android:inputType="number"
                                android:maxLength="2"
                                android:selectAllOnFocus="true"
                                android:text="1"
                                android:textAlignment="viewEnd"
                                android:textColor="?attr/secondaryTextColor"
                                android:textColorHint="?attr/hintTextColor"
                                android:textSize="16sp"
                                tools:layout_editor_absoluteX="242dp"
                                tools:layout_editor_absoluteY="16dp" />
                        </LinearLayout>

                        <View
                            style="@style/Divider"
                            id="@+id/view4"
                            android:layout_width="match_parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView36"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Repeat Workout"
                                android:textSize="16sp" />

                            <Switch
                                android:id="@+id/repeatSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/repeatLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <View
                                android:id="@+id/view8"
                                style="@style/Divider"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></View>

                            <LinearLayout
                                android:id="@+id/repeatLayout01"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/textView37"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Number of Repetitions"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/repeatTimer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_text_default"
                                    android:ems="10"
                                    android:hint="1"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:nextFocusDown="@id/workoutEndRestTimer"
                                    android:selectAllOnFocus="true"
                                    android:text="1"
                                    android:textAlignment="viewEnd"
                                    android:textColor="?attr/secondaryTextColor"
                                    android:textColorHint="?attr/hintTextColor"
                                    android:textSize="16sp"
                                    tools:layout_editor_absoluteX="242dp"
                                    tools:layout_editor_absoluteY="16dp" />

                            </LinearLayout>

                            <View
                                android:id="@+id/view86"
                                style="@style/Divider"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></View>

                            <LinearLayout
                                android:id="@+id/repeatLayout02"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/textView37"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Rest Between Workouts"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/workoutEndRestTimer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_text_default"
                                    android:ems="10"
                                    android:hint="0m 00s"
                                    android:inputType="number"
                                    android:maxLength="7"
                                    android:nextFocusDown="@id/restTimer"
                                    android:selectAllOnFocus="true"
                                    android:text="0m 00s"
                                    android:textAlignment="viewEnd"
                                    android:textColor="?attr/secondaryTextColor"
                                    android:textColorHint="?attr/hintTextColor"
                                    android:textSize="16sp"
                                    tools:layout_editor_absoluteX="242dp"
                                    tools:layout_editor_absoluteY="16dp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardSummaryOld"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="1dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="?attr/backgroundColor"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/enterButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/summarySwitch">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/totalTimeWords"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Time: "
                                android:textAlignment="textEnd"
                                android:textColor="?attr/highlightTextColor"
                                android:textSize="16sp"
                                android:visibility="visible"
                                tools:layout_editor_absoluteX="103dp"
                                tools:layout_editor_absoluteY="578dp" />

                            <TextView
                                android:id="@+id/totalTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0:00"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor"
                                android:textSize="16sp"
                                android:visibility="visible"
                                tools:layout_editor_absoluteX="219dp"
                                tools:layout_editor_absoluteY="578dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/summaryLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/summaryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Show Workout Summary"
                    android:textAllCaps="false"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardSets" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardSets">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="16dp">

                        <TextView
                            android:id="@+id/summaryTextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/ic_arrow_right"
                            android:drawableTint="?attr/tintDarkColor"
                            android:text="Workout Summary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Switch
                    android:id="@+id/summarySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:layout_marginTop="12dp"
                    android:switchPadding="6dp"
                    android:textColor="?attr/headerTextColor"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardSets" />

                <Button
                    android:id="@+id/enterButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ripple"
                    android:text="Apply"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/saveButton"
                    app:layout_constraintTop_toBottomOf="@+id/cardSummary" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_seethrough"
                    android:stateListAnimator="@null"
                    android:text="Save Workout"
                    android:textColor="?attr/tintDarkColor"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/enterButton"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardSummary" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="16dp"
                    android:text="High Intensity"
                    android:textAllCaps="true"
                    android:textColor="?attr/textColor"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/cardWork"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="16dp"
                    android:text="Repeat"
                    android:textAllCaps="true"
                    android:textColor="?attr/textColor"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/cardSets"
                    app:layout_constraintStart_toStartOf="parent" />


            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>